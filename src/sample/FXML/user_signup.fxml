            <TextField fx:id="name" prefHeight="56" prefWidth="400" style="-fx-background-radius: 30px"
                       alignment="CENTER_RIGHT">
                <font>
                    <Font name="DejaVu Serif Bold" size="18.0"/>
                </font>
            </TextField>
            <FontAwesomeIconView glyphName="USER" size="50"/>

        </HBox>
        <HBox layoutX="63.0" layoutY="160.0" prefHeight="56.0" prefWidth="414.0" spacing="5">
            <PasswordField fx:id="pass" style="-fx-background-radius: 30px;" alignment="CENTER_RIGHT" prefWidth="400"
