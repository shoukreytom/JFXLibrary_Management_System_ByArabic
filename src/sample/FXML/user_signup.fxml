                    <Font name="DejaVu Serif Bold" size="18.0"/>
                </font>
            </PasswordField>
            <FontAwesomeIconView glyphName="LOCK" size="50"/>
        </HBox>
        <Button layoutX="178.0" layoutY="400.0" mnemonicParsing="false" prefHeight="42.0" prefWidth="185.0"
                text="انشاء حساب"
                style="-fx-background-radius: 30px" fx:id="sign" onAction="#signUp">
            <font>
                <Font name="DejaVu Serif Bold" size="18.0"/>
            </font>
        </Button>
    </Pane>
</AnchorPane>
