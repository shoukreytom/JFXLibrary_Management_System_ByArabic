<AnchorPane prefHeight="633.0" prefWidth="714.0" fx:controller="sample.Controller.SignUp" xmlns:fx="http://javafx.com/fxml">
    <Pane layoutY="-15.0" prefHeight="139.0" prefWidth="714.0" style="-fx-background-color: black;"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
